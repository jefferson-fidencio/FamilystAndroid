<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe seus dados para criar uma conta!"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/txt_cadastro_cabecalho"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_nome_cadastro"
        android:hint="Nome"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_email_cadastro"
        android:hint="Email"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_senha_cadastro"
        android:hint="Senha"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="CADASTRAR"
        android:background="@color/cor_padrao"
        android:textSize="25dp"
        android:textColor="@color/cor_branco"
        android:id="@+id/btn_cadastrar"
        android:layout_gravity="center_horizontal" />
</LinearLayout>